    </path>

    <path id="wePageAcceleo.classpath">
        <path refid="wePageAcceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="wePageAcceleo.libraryclasspath.alljars">
        <pathelement location="../wePageAcceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="wePageAcceleo.classpath.alljars">
        <path refid="wePageAcceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="wePageAcceleo.main.Generate" classpathref="wePageAcceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="wePageAcceleo.main.Generate" classpathref="wePageAcceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
