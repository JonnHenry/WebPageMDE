        <pathelement location="${ECLIPSE_HOME}/plugins/org.eclipse.equinox.registry_3.10.100.v20210212-1143.jar"/>
        <pathelement location="${ECLIPSE_HOME}/plugins/org.eclipse.equinox.preferences_3.8.200.v20210212-1143.jar"/>
